@model Presentation.Models.LoginViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <title>@ViewData["Title"] - Presentation</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Presentation.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center h-100 w-25">
        <div class="form-control">
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model?.Action == IdentityAction.Login ? "active" : string.Empty)" id="tab-login" data-mdb-toggle="pill" role="tab"
                        aria-controls="login" aria-selected="true" asp-route-idaction="login" asp-action="Login">Login</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link @(Model?.Action == IdentityAction.Register ? "active" : string.Empty)" id="tab-register" data-mdb-toggle="pill" role="tab"
                        aria-controls="register" aria-selected="false" asp-route-idaction="register" asp-action="Login">Register</a>
                </li>
            </ul>
            <!-- Pills navs -->
            <!-- Pills content -->
            <div class="tab-content">
                <div class="tab-pane fade @(Model?.Action == IdentityAction.Login ? "show active" : string.Empty)" id="login" role="tabpanel" aria-labelledby="tab-login">
                    <form asp-action="Login" asp-controller="Identity" method="post">
                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <input type="email" id="loginName" class="form-control" placeholder="Email" asp-for="Email"/>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                            <input type="password" id="loginPassword" class="form-control" placeholder="Password" asp-for="Password"/>
                        </div>

                        <!-- Checkbox -->
                        <div class="form-check mb-3 mb-md-0">
                            <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked asp-for="KeepLoggedIn"/>
                            <label class="form-check-label" for="loginCheck"> Remember me </label>
                        </div>
                    
                        <!-- 2 column grid layout -->
                        <div class="row mb-4"></div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
                        @if (TempData["ErrorMEssage"] != null)
                        {
                            <div class="form-outline mb-4">
                                <span class="text-danger">@TempData["ErrorMessage"]</span>
                            </div>
                        }
                    </form>
                </div>
                <div class="tab-pane fade @(Model?.Action == IdentityAction.Register ? "show active" : string.Empty)" id="register" role="tabpanel" aria-labelledby="tab-register">
                    <form asp-action="Register" asp-controller="Identity" method="post">

                        <!-- Name input -->
                        <div class="form-outline mb-4">
                            <input type="text" id="registerName" class="form-control" placeholder="Name" asp-for="Name"/>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                                <input type="email" id="registerEmail" class="form-control" placeholder="Email" asp-for="Email"/>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-4">
                                <input type="password" id="registerPassword" class="form-control" placeholder="Password" asp-for="Password"/>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-3">Sign up</button>
                        @if (TempData["ErrorMEssage"] != null)
                        {
                            <div class="form-outline mb-4">
                                <span class="text-danger">@TempData["ErrorMessage"]</span>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
        <!-- Pills navs -->
        
    <!-- Pills content -->
    </div>
</body>
</html>
